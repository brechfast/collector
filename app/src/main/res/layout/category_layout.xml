<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
            android:id="@+id/createCategoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:hint="@string/category_title"
            android:inputType="text"
            android:imeOptions="actionNext"
            app:layout_constraintTop_toTopOf="parent">
    <requestFocus/>
    </EditText>

    <EditText
            android:id="@+id/createCategoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="4dp"
            android:hint="@string/description_optional"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@id/createCategoryTitle"
            tools:text="Let's see how long I have to type for until I make it all the way to 3 lines I wonder what will happen when we get that far oh boy it's here I guess we'll just keep on going."/>

</androidx.constraintlayout.widget.ConstraintLayout>